mixin sign-up
    .ui.segment#sign-up
        a.ui.ribbon.label.green.big 报名
        .ui.form
            .ui.two.fields
                +input-place('姓 名','请输入姓名','name')
                +input-place('学 号','请输入学号','no')
            .ui.two.fields
                +input-place('学 院','请输入学院','academy')
                +input-place('专 业','请输入专业','profession')
            .ui.two.fields
                +input-place('年 级','请输入年级','grade')
                +input-place('手 机','请输入手机','phone')
            .ui.two.fields
                +input-place('邮 箱','请输入邮箱','email')
                .ui.inline.field.project
                    label 项 目
                    select.ui.dropdown
                        option(value='') 请选择项目
                        option(value='1') 项目2
                        option(value='2') 项目3
                        option(value='3') 项目4    
            .ui.field.inline.file
                 label 上传简历（最大10MB）
                 input(type='file' title='请选择简历')
            .ui.field
                 .ui.button.blue.fluid.submit 确定   


mixin input-place(lable,placeholder,cls)
  .inline.field(class=cls)
    lable=lable
    input(placeholder=placeholder,type='text')




            
