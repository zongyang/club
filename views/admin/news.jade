mixin news()
   #news
      +newsEdit()
      .ui.button.green.add 添加
      table.ui.sortable.celled.striped.table
        thead
          tr 
             th 消息标题
             th 作者
             th 简介
             th 日期
             th
             //详细内容隐藏 
        tbody
            each news in newslist 
                tr
                    td.title #{news.title}
                    td.info #{news.info}
                    th.content #{news.content}
                    td
                       i.close.icon
                       i.edit.icon
                    td.hidden.content #{news.date}
                    td.hidden.id #{news._id}



mixin newsEdit()
    .ui.fullscreen.modal.news
        i.close.icon
        .header
            p.title 消息标题
        .content
            .ui.form
                .field
                  p 日期
                .field.info
                    lable 简介
                    input(type='text')
                .field.content
                    lable 详细内容
                    textarea
        .actions
            .ui.positive.button 确定
            .ui.negative.button 取消
