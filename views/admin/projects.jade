mixin projects()
   #projects
      +proEdit()
      table.ui.celled.striped.table
        thead
          tr 
             th 项目
             th 项目人员
             th 简介
             //详细内容隐藏 
        tbody
            tr
                td
                   i.close.icon
                   i.edit.icon




mixin proEdit()
    .ui.fullscreen.modal.projects
        i.close.icon
        .header
            p 标题
        .content
            .ui.form
                .ui.two.fields
                    .field
                        lable 项目
                        input(type='text')
                    .field
                        lable 参与人员
                        input(type='text')
                .field
                    lable 简介
                    input(type='text')
                .field
                    lable 详细内容
                    textarea
        .actions
            .ui.positive.button 确定
            .ui.negative.button 取消
